<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapViewofChild">



    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/getCurrentLocButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="43dp"
        android:background="#45b998"
        android:text="@string/get_current_location"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/saveLocInDatabaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#45b998"
        android:padding="5dp"
        android:visibility="invisible"
        android:text="@string/save_coordinates"
        android:layout_alignBaseline="@+id/getCurrentLocButton"
        android:layout_alignBottom="@+id/getCurrentLocButton"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
